---
interface Props {
	title: string;
}

const { title } = Astro.props;

const navItems = [
  { name: 'Diseña', href: '#', hasDropdown: true },
  { name: 'Plantillas', href: '#', hasDropdown: true },
  { name: 'Características', href: '#', hasDropdown: true },
  { name: 'Aprende', href: '#', hasDropdown: false },
  { name: 'Planes y precios', href: '#', hasDropdown: false },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 p-0 box-border">
		<nav class="bg-white border-b border-gray-200">
			<div class="max-w-[1920px] mx-auto px-4 sm:px-6 lg:px-8">
			  <div class="flex justify-between h-16">
				<div class="flex items-center">
				  <div class="flex-shrink-0 flex items-center">
					<svg class="h-8 w-auto text-[#7d2ae8]" viewBox="0 0 80 26" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
					  <path d="M16.63.43C11.54-.9 6.45.61 2.85 4.6A13.65 13.65 0 0 0 .57 19.66c1.37 2.66 3.35 4.78 5.8 6.18 4.27 2.4 9 2.57 13.48.5 3.7-1.72 6.42-4.61 7.89-8.51 1.35-3.6 1.43-7.14.24-10.78C26.61 2.33 22.17-.77 16.63.43Zm-4.17 23.3c-1.41.48-3.47.22-4.63-.58-1.6-1.05-.6-2.15.55-2.86 1.78-1.1 3.72-1.82 5.64-2.64.47-.2.87-.49 1.36-.77.16.65.32 1.23.43 1.82.33 1.65-.23 3.74-1.3 4.6-.36.3-.93.3-1.36.43-.23-.01-.46-.01-.69 0Zm9.44-13.42c-1.34 1.48-2.84 2.78-4.38 4.06-1.94 1.6-3.9 3.19-5.85 4.77-.25.2-.54.36-.93.62-.16-.72-.3-1.34-.46-1.95-.16-.62-.37-1.23-.5-1.86-.08-.43.03-.91.1-1.36.15-.87.36-1.73.54-2.6l.57-2.75c.13-.68.2-1.38.38-2.04.36-1.29 1.48-1.75 2.65-1.03.94.57 1.85 1.22 2.68 1.93 1.78 1.53 3.5 3.12 5.26 4.68.05.05.13.06.2.09.03-.2.06-.34.06-.34a.52.52 0 0 0-.32-.22ZM67.61 7.24c-1.92 0-3.39.51-4.41 1.53-1.02 1-1.53 2.46-1.53 4.35v11.66h3.82V13.69c0-1.82.8-2.72 2.39-2.72.6 0 1.31.13 2.16.38l.97-3.53c-1.11-.39-2.27-.58-3.4-.58Zm-26.26.26v17.28h3.82v-9.75l7.12 9.75h4.65l-7.66-10.16 7.35-7.12h-4.65l-6.81 6.88V1.08h-3.82v6.42Zm39.54 0-6.2 17.28h4.01l1.32-3.98h7.35l1.32 3.98h4.08l-6.13-17.28h-5.75Zm-.6 10.16 2.46-7.38 2.46 7.38h-4.92ZM46.35 7.3c-2.66 0-4.78.82-6.36 2.46-1.6 1.63-2.39 3.85-2.39 6.65 0 2.66.8 4.81 2.39 6.42 1.6 1.63 3.72 2.46 6.36 2.46 2.66 0 4.78-.82 6.36-2.46 1.6-1.63 2.39-3.75 2.39-6.42 0-2.8-.8-5.02-2.39-6.65-1.58-1.64-3.7-2.46-6.36-2.46Zm3.1 12.71c-.8.87-1.85 1.32-3.1 1.32-1.24 0-2.26-.43-3.08-1.32-.82-.87-1.22-2.08-1.22-3.6 0-1.53.41-2.77 1.22-3.69.82-.92 1.85-1.39 3.08-1.39 1.24 0 2.29.46 3.1 1.39s1.24 2.16 1.24 3.69c0 1.52-.41 2.73-1.24 3.6Z"/>
					</svg>
				  </div>
				  <div class="hidden lg:ml-6 lg:flex lg:space-x-6 xl:space-x-8">
					{navItems.map((item, index) => (
					  <div class={`relative group ${index >= 2 ? 'hidden xl:block' : ''}`}>
						<a
						  href={item.href}
						  class="text-gray-900 inline-flex items-center px-1 pt-1 text-sm font-medium"
						>
						  {item.name}
						  {item.hasDropdown && (
							<svg class="ml-2 h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
							  <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
							</svg>
						  )}
						</a>
					  </div>
					))}
				  </div>
				</div>
				<div class="hidden lg:ml-6 lg:flex lg:items-center">
				  <div class="relative">
					<input
					  type="text"
					  placeholder="Prueba con 'folleto'"
					  class="w-64 bg-gray-100 text-gray-900 text-sm rounded-full pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white"
					/>
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
					  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
						<path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
					  </svg>
					</div>
				  </div>
				  <a href="#" class="ml-4 text-sm font-medium text-gray-700 hover:text-gray-800">Iniciar sesión</a>
				  <a href="#" class="ml-8 inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-sm shadow-sm text-sm font-medium text-white bg-[#7d2ae8] hover:bg-[#6929c4] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
					Registrarse
				  </a>
				</div>
				<div class="flex items-center lg:hidden">
				  <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-500" aria-controls="mobile-menu" aria-expanded="false" id="mobile-menu-button">
					<span class="sr-only">Abrir menú principal</span>
					<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
					  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				  </button>
				</div>
				<div class="hidden lg:flex xl:hidden items-center">
				  <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-500" aria-controls="more-menu" aria-expanded="false" id="more-menu-button">
					<span class="sr-only">Más opciones</span>
					<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				  </button>
				</div>
			  </div>
			</div>
		  
			<div class="lg:hidden hidden" id="mobile-menu">
			  <div class="pt-2 pb-3 space-y-1">
				{navItems.map((item) => (
				  <a
					href={item.href}
					class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 block pl-3 pr-4 py-2 text-base font-medium"
				  >
					{item.name}
				  </a>
				))}
			  </div>
			  <div class="pt-4 pb-3 border-t border-gray-200">
				<div class="flex items-center px-4">
				  <div class="flex-shrink-0">
					<input
					  type="text"
					  placeholder="Prueba con 'folleto'"
					  class="w-full bg-gray-100 text-gray-900 text-sm rounded-full pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:bg-white"
					/>
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
					  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
						<path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
					  </svg>
					</div>
				  </div>
				</div>
				<div class="mt-3 space-y-1">
				  <a href="#" class="block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100">Iniciar sesión</a>
				  <a href="#" class="block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100">Registrarse</a>
				</div>
			  </div>
			</div>
		  
			<div class="hidden lg:hidden" id="more-menu">
			  <div class="py-1" role="none">
				{navItems.slice(2).map((item) => (
				  <a
					href={item.href}
					class="text-gray-700 block px-4 py-2 text-sm"
					role="menuitem"
				  >
					{item.name}
				  </a>
				))}
			  </div>
			</div>
		  </nav>
		  
		  <script>
			const mobileMenuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			const moreMenuButton = document.getElementById('more-menu-button');
			const moreMenu = document.getElementById('more-menu');
		  
			if (mobileMenuButton && mobileMenu) {
			  mobileMenuButton.addEventListener('click', () => {
				mobileMenu.classList.toggle('hidden');
			  });
			}
		  
			if (moreMenuButton && moreMenu) {
			  moreMenuButton.addEventListener('click', () => {
				moreMenu.classList.toggle('hidden');
			  });
			}
		  </script>
	</body>
</html>

